{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "out-test",
        "lib": [
            "ES2020"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node",
            "mocha",
            "vscode"
        ]
    },
    "include": [
        "src/**/*.ts",
        "__test__/**/*.ts"
    ]
}
