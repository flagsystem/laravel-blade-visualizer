{
    "name": "laravel-blade-visualizer",
    "displayName": "Laravel Blade Visualizer",
    "description": "Visualize parent-child relationships in Laravel Blade template files",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:blade",
        "onLanguage:php"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "laravel-blade-visualizer.showTree",
                "title": "Show Blade Template Tree"
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "bladeTemplateTree",
                    "name": "Blade Template Tree"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "eslint": "^8.26.0",
        "typescript": "^4.8.4"
    },
    "dependencies": {},
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/laravel-blade-visualizer.git"
    },
    "publisher": "your-publisher-name",
    "keywords": [
        "laravel",
        "blade",
        "template",
        "visualization",
        "php"
    ],
    "license": "MIT"
}
